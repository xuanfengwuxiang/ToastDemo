<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/rl_toast_noimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="16dp"
            android:maxHeight="66dp"
            android:maxWidth="176dp"
            android:singleLine="false"
            android:maxLines="3"
            android:id="@+id/tv_toast_noimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_toast_withimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    <ImageView
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_gravity="center"
        android:id="@+id/iv_toast_withimage"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/tv_toast_withimage"
            android:maxWidth="64dp"
            android:maxHeight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
